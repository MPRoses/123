<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>101Mailz</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"         rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/css/login.css" />
</head>
<body>
  <div id="container">
    <div class="navbar">
  
      <a id="brandName" onclick="window.location.reload();">101<br><span>MAILZ</span></a>

      <a>LOGIN</a>
      <a href="/register">REGISTER</a>
      <a>ABOUT US</a>
      <a>HOME</a>
    </div>
      
    </section>
    
    <div id="loginForm" style="padding-left: 25px;">
      <form action="auth" method="POST">
        <!-- hieronder kan de onthoud mij functie ingevoegd worden -->
        <input type="text" name="username" placeholder="Gebruikersnaam" required> 
        <input type="password" name="password" placeholder="Wachtwoord" required>
        <input type="submit" value="Inloggen" id="loginButton" <%= locals.disabledValue %>>
      </form>
      <%= locals.error %>
      <div id="countdownContainer">
          <p id="countDown"><%= locals.countDown %></p>
      </div>
          

             <script>
              
             if (document.getElementById("countDown").innerHTML.length > 20) {
              
              
                  let timeOut = 5;
                  var counter = setInterval(function(){
                      document.getElementById("countDown").innerHTML = 'Te veel foute inlpogpogingen! Kom terug over ' + timeOut + ' seconden.';
                      timeOut--;
                      console.log(timeOut);
                        if (timeOut == 0) {
                          clearInterval(counter);
                    }
                  }, 1000);

                  
          
        
              /*setTimeout(
              getElementById('countDown').innerHTML = 'Te veel inlogpogingen kom terug over ' + i + ' seconden terug'
                ), 1000;*/
               
              }
          
             </script>
    </div>
  </div>
</body>